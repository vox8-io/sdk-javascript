{
  "name": "@vox8/sdk",
  "version": "0.1.0",
  "description": "JavaScript SDK for vox8 real-time speech translation",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "vox8",
    "speech",
    "translation",
    "real-time",
    "voice",
    "websocket",
    "speech-to-speech",
    "voice-matching"
  ],
  "author": "vox8 <support@vox8.com>",
  "license": "MIT",
  "homepage": "https://vox8.com/docs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vox8-io/sdk-javascript.git"
  },
  "bugs": {
    "url": "https://github.com/vox8-io/sdk-javascript/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
